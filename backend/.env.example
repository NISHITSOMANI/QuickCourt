# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/quickcourt
MONGODB_TEST_URI=mongodb://localhost:27017/quickcourt_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=QuickCourt <noreply@quickcourt.com>

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Payment Simulation
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-key

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Metrics
METRICS_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@quickcourt.com
ADMIN_PASSWORD=change-this-secure-password

# Lock Service Configuration (MongoDB-based distributed locks)
LOCK_TTL_SECONDS=30
LOCK_RETRY_DELAY_MS=100
LOCK_MAX_RETRIES=10

# Notification Configuration
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_CLEANUP_DAYS=30

# Booking Configuration
BOOKING_ADVANCE_LIMIT_DAYS=30
BOOKING_CANCELLATION_HOURS=2
